<h2>Posts</h2>
<div class="row">
    <div class="col-md-12">
        <table class="table table-striped">
            <thead class="thead-light">
                <tr>
                    <td>ID</td>
                    <td>Content</td>
                    <td>Menu</td>
                </tr>
            </thead>
            <tbody>
                <% @posts.each do |post| %>
                <tr>
                    <td><%= post.id %></td>
                    <td><%= post.content %></td>
                    <td>[<%= link_to 'Edit', edit_post_path(post) %>]
                        [<%= link_to 'Delete', post_path(post), method: :delete, data:{confirm: '消して良いですか？'} %>]</td>
                </tr>
                <% end %>
            </tbody>
        </table>
        <div>
            <%= link_to 'CREATE POST', new_post_path(@post) %>
        </div>
    </div>
</div>